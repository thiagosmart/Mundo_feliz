<div class="page-header">
  <%= link_to new_tipo_produto_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Tipo produto
  <% end %>
  <h1>Listing tipo_produtos</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Nome</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @tipo_produtos) do |tipo_produto| %>
            <td><%= tipo_produto.nome %></td>
            <td><%= link_to 'Show', tipo_produto %></td>
        <td><%= link_to 'Edit', edit_tipo_produto_path(tipo_produto) %></td>
        <td><%= button_to 'Destroy',tipo_produto , method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td></td>

      <% end %>
    </tbody>
  </table>
</div>
